<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:text="Replace with event"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:textSize="40dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cal_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/cal_start_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Startdate"
            android:onClick="datePickStartDate"
            android:textColor="#000000" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cal_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/cal_start_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Startdate"
            android:onClick="datePickStartTime"
            android:textColor="#000000" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cal_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/cal_end_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enddate"
            android:onClick="datePickEndDate"
            android:textColor="#000000" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cal_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/cal_end_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Startdate"
            android:onClick="datePickEndTime"
            android:textColor="#000000" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_save_exeption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@color/app_design"
        android:padding="10dp"
        android:text="Save"
        android:textColor="@android:color/white" />

</LinearLayout>